<% include ../partials/header %>

<div class="container">
    <div class>
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 40px auto">
            
<!--Notice that we are calling only the campground ID from the object, so we should define a new variable in the route that is passing through just the ID instead of the whole campground-->
            
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>