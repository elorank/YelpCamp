<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>    
            <p>This is our hand-picked list of campgrounds from around the world.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>
    </header>
    
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular sites</h3>
        </div>
    </div>    

        
    <div class="row">    
    
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="figure border">
                    <img class="figure-img img-fluid" src="<%= campground.image %>">  
                    <div class="figure-caption text-center">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p class="text-center">
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% });%>
        
    </div>
</div>

<% include ../partials/footer %>